<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    다크모드 방지     -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSecondary">@color/secondary</item>
        <item name="colorAccent">@color/white</item>

        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
    </style>

    <!--    플로팅 버튼 모양 커스텀     -->
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Style.ImageButton.Default" parent="">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Style.TextView.Selected" parent="">
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorHighlight">#4DFE9870</item>
    </style>

    <style name="Widget.App.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="elevationOverlayEnabled">false</item>
        <item name="itemShapeAppearance">@drawable/rectangle_primary_radius_8</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
    </style>


    <style name="Widget.App.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:singleLine">true</item>
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
        <item name="chipSpacingHorizontal">3dp</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.Headline1" parent="">
        <item name="android:textSize">26sp</item>
        <item name="android:lineHeight">32dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TextAppearance.Headline2" parent="">
        <item name="android:textSize">26sp</item>
        <item name="android:lineHeight">32dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="TextAppearance.Headline3" parent="">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">26dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TextAppearance.Subtitle1" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">21dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TextAppearance.Subtitle2" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TextAppearance.Subtitle3" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="TextAppearance.Body1" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">21dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="TextAppearance.Body2" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">17dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="TextAppearance.Body3" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">17dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TextAppearance.Body4" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">21dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="TextAppearance.Caption1" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">14dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="TextAppearance.Caption2" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">14dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

</resources>