<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.BinderActivity">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"

            android:text="this is temp binder"

            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"

                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_login_activity"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"

                    android:text="TEST"

                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_signup_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="30dp"

                    android:text="test"

                    app:layout_constraintTop_toBottomOf="@id/btn_login_activity" />


                <Button
                    android:id="@+id/btn_home_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="30dp"

                    android:text="home activity"

                    app:layout_constraintTop_toBottomOf="@id/btn_signup_activity" />

                <Button
                    android:id="@+id/btn_test_activity_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="30dp"

                    android:text="test"

                    app:layout_constraintTop_toBottomOf="@id/btn_home_activity" />

                <Button
                    android:id="@+id/btn_test_activity_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="30dp"

                    android:text="test"

                    app:layout_constraintTop_toBottomOf="@id/btn_test_activity_2" />

                <Button
                    android:id="@+id/btn_test_activity_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="30dp"

                    android:text="test"

                    app:layout_constraintTop_toBottomOf="@id/btn_test_activity_3" />

                <Button
                    android:id="@+id/btn_test_activity_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="30dp"

                    android:text="test"

                    app:layout_constraintTop_toBottomOf="@id/btn_test_activity_4" />


                <Button
                    android:id="@+id/btn_test_activity_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="30dp"

                    android:text="test"

                    app:layout_constraintTop_toBottomOf="@id/btn_test_activity_5" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>