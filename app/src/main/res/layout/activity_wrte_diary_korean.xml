<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.WriteDiaryKoreanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_koran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="23dp"
            android:text="취소"
            android:textAppearance="@style/TextAppearance.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_korean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="한국어"
            android:textAppearance="@style/TextAppearance.Subtitle2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="STEP 1"
            android:textAppearance="@style/TextAppearance.Caption1"
            android:textColor="@color/grey_400"
            app:layout_constraintEnd_toEndOf="@id/txt_korean"
            app:layout_constraintStart_toStartOf="@+id/txt_korean"
            app:layout_constraintTop_toBottomOf="@+id/txt_korean" />

        <TextView
            android:id="@+id/txt_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginRight="30dp"
            android:text="다음"
            android:textAppearance="@style/TextAppearance.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_random_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/grey_100"
        android:paddingHorizontal="24dp"
        android:visibility="gone"
        android:height="91dp"
        android:paddingTop="14dp"
        android:paddingBottom="12dp"
        android:text="Q. 오늘부터 딱 일주일 후! 설레는 크리스마스네요. 일주일 전부터 세워보는 나의 크리스마스 계획은?"
        android:textAppearance="@style/TextAppearance.Body4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_koran" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_random_topic">

        <TextView
            android:id="@+id/txt_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:bufferType="spannable"
            android:text="TIP 정확한 힌트를 받고 싶다면? 문장을 정리해보세요!"
            android:textAppearance="@style/TextAppearance.Body2"
            android:textColor="@color/grey_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/et_diary_korean"
            android:inputType="textMultiLine|textNoSuggestions|textAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:textAppearance="@style/TextAppearance.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_tip" />

        <requestFocus />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shadow_app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <CheckBox
            android:id="@+id/cb_random"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="4dp"
            android:button="@null"
            android:background="@drawable/custom_checkbox"
            app:layout_constraintTop_toTopOf="@id/txt_random"
            app:layout_constraintBottom_toBottomOf="@id/txt_random"
            app:layout_constraintEnd_toStartOf="@id/txt_random"
            />

        <TextView
            android:id="@+id/txt_random"
            android:text="랜덤 주제"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:textAppearance="@style/TextAppearance.Body2"
            android:textColor="@color/grey_600"
            android:layout_marginRight="18dp"
            app:layout_constraintEnd_toStartOf="@id/cb_public"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <CheckBox
            android:id="@+id/cb_public"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="4dp"
            android:button="@null"
            android:background="@drawable/custom_checkbox"
            app:layout_constraintTop_toTopOf="@id/txt_public"
            app:layout_constraintBottom_toBottomOf="@id/txt_public"
            app:layout_constraintEnd_toStartOf="@id/txt_public"
            />

        <TextView
            android:id="@+id/txt_public"
            android:text="공개"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:textAppearance="@style/TextAppearance.Body2"
            android:textColor="@color/grey_600"
            android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>