<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".presentation.view.welcome.OnBoardingActivity">

        <ImageView
            android:id="@+id/iv_on_boarding_logo"
            android:layout_width="142dp"
            android:layout_height="36dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginTop="168dp"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="179dp"
            android:layout_marginBottom="596dp"


            android:src="@drawable/logo_smeme_3x"
            />

        <TextView
            android:id="@+id/txt_on_boarding_first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_on_boarding_logo"
            app:layout_constraintStart_toStartOf="parent"

            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="36dp"
            android:text="일상에 스미는"
            android:textColor="@color/black"
            android:textSize="26sp"
            />
        <TextView
            android:id="@+id/txt_on_boarding_second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_on_boarding_first_line"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginLeft="36dp"

            android:fontFamily="@font/pretendard_regular"
            android:text="외국어 일기"
            android:textSize="26sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/txt_on_boarding_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_on_boarding_first_line"
            app:layout_constraintStart_toStartOf="@id/txt_on_boarding_second_line"

            android:layout_marginStart="128dp"

            android:text="스밈"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            />

        <ImageButton
            android:id="@+id/btn_on_boarding_kakao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/selc_kakao_login"

            android:background="@android:color/transparent"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="124dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>